{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <article>
                <h1>{{pin.title}}</h1>

                <p>{{pin.description}}</p>

            </article>
            
            <a href="{{ path('app_pins_edit', {id: pin.id}) }}">Edit</a> |
            <a href="#" onclick="event.preventDefault();confirm('Êtes-vous bien sûr(e) ?') && document.getElementById('js-pin-delete-form').submit();">Delete</a> 
                   
            <form id="js-pin-delete-form" action="{{ path('app_pins_delete', {id: pin.id}) }}" method="post" style="display:none">        
                <input type="hidden" name="csrf_token" value="{{csrf_token('pin_deletion_'~ pin.id)}}">
                <input type="hidden" name="_method" value="DELETE"> 
            </form>      
        </div> 
    </div>  
{% endblock %}