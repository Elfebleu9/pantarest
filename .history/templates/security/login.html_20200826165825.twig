{% extends 'layouts/base.html.twig' %}

{% block title 'Connexion' endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-error mb-3 rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>           
            <div class="d-flex justify-content-between mt-3">
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me"> remember me
                        </label>
                    </div>
                </div>
                <a href="#">Forget password ?</a>                
                
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </form>
    </div>
</div>
{% endblock %}
